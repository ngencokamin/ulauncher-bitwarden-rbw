{
    "required_api_version": "^2.0.0",
    "developer_name": "Nix Genco-Kamin",
    "name": "Bitwarden - RBW",
    "description": "Bitwarden password manager for ulauncher using rbw",
    "icon": "images/bitwarden.svg",
    "options": {
        "query_debounce": 0.1
    },
    "preferences": [
        {
            "id": "search",
            "type": "keyword",
            "name": "Search vault",
            "default_value": "bw"
        },
        {
            "id": "max-results",
            "type": "input",
            "name": "Maximum number of search results to display",
            "default_value": "6"
        },
        {
            "id": "quick-copy",
            "type": "select",
            "name": "Quick copy",
            "default_value": false,
            "description": "If enabled, selecting an entry will copy the password to clipboard instead of opening a details window.",
            "options": [
                { "value": true, "text": "True" },
                { "value": false, "text": "False" }
            ]
        },
        {
            "id": "icons-enabled",
            "type": "select",
            "name": "Enable icons",
            "default_value": false,
            "description": "If enabled, vault entries will be displayed with icons.",
            "options": [
                { "value": true, "text": "True" },
                { "value": false, "text": "False" }
            ]
        }
    ]
}